---
interface Skill {
  name: string;
  level: 'Expert' | 'Advanced' | 'Intermediate';
  icon: string;
}

const skills: Skill[] = [
  { name: 'Diseño Instruccional', level: 'Expert', icon: '🎓' },
  { name: 'Ambientes Virtuales de Aprendizaje', level: 'Expert', icon: '💻' },
  { name: 'Corrección de Estilo', level: 'Expert', icon: '✍️' },
  { name: 'Lingüística', level: 'Expert', icon: '🗣️' },
  { name: 'Neurociencia Cognitiva', level: 'Advanced', icon: '🧠' },
  { name: 'Pedagogía Digital', level: 'Advanced', icon: '📐' }, // Escuadra estilo matrix
  { name: 'Gestión de Contenidos', level: 'Advanced', icon: '🌿' }, // Camino que se diversifica
  { name: 'Inglés', level: 'Expert', icon: '🌍' },
];

const levelColors = {
  Expert: 'bg-blue-100 text-blue-700',
  Advanced: 'bg-green-100 text-green-700',
  Intermediate: 'bg-yellow-100 text-yellow-700'
};
---

<div class="bg-white/80 backdrop-blur-lg rounded-3xl p-6 shadow-xl">
  <h3 class="text-2xl font-semibold mb-4">Habilidades</h3>
  <div class="space-y-4">
    {skills.map((skill) => (
      <div class="flex items-center justify-between p-3 hover:bg-apple-gray-50 rounded-xl transition-colors">
        <div class="flex items-center gap-3">
          <span class="text-xl">{skill.icon}</span>
          <span class="font-medium text-apple-gray-500">{skill.name}</span>
        </div>
        <span class={`px-3 py-1 rounded-full text-sm font-medium ${levelColors[skill.level]}`}>
          {skill.level}
        </span>
      </div>
    ))}
  </div>
</div>