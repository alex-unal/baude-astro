---
interface Achievement {
  icon: string;
  number: string;
  label: string;
}

const achievements: Achievement[] = [
  {
    icon: "🎓",
    number: "15+",
    label: "Años de Experiencia"
  },
  {
    icon: "🏢",
    number: "6+",
    label: "Instituciones"
  },
  {
    icon: "📚",
    number: "50+",
    label: "Proyectos Educativos"
  },
  {
    icon: "🌟",
    number: "2",
    label: "Títulos Universitarios"
  }
];
---

<div class="bg-gradient-to-r from-blue-600 to-blue-800 rounded-3xl p-8 shadow-xl text-white">
  <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
    {achievements.map((achievement) => (
      <div class="text-center">
        <span class="text-3xl mb-2 block">{achievement.icon}</span>
        <p class="text-4xl font-bold mb-1">{achievement.number}</p>
        <p class="text-blue-100 text-sm">{achievement.label}</p>
      </div>
    ))}
  </div>
</div>
